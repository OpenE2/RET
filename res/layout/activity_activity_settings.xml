<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:contentDescription="@string/discription">

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".Activity_settings"
	    android:id="@+id/settings">
	    
	    
	 	<LinearLayout
	 	    android:orientation="horizontal"
	        android:id="@+id/sett_profil"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/border_bottom">
	 	    
	 	    <TextView android:id="@+id/profil"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/font_size_rec_info"
	            android:hint="@string/profil"/>
	 	    
	 	    <View
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_weight="1"/>  
	 	   
	 	    <Spinner
		    	android:id="@+id/profil_spinner"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:focusableInTouchMode="true"/>
	 	    	
		</LinearLayout>
	
	
	    <LinearLayout
	        android:layout_below="@id/sett_profil"
	        android:orientation="horizontal"
	        android:id="@+id/sett_profil_ip"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/border_bottom">
	
	        
		    <TextView android:id="@+id/sett_ip"
			    android:textSize="@dimen/font_size_rec_info"        
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:hint="@string/sett_ip"/>
		    
		    <View
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_weight="1"/>  
		    
		    <EditText android:id="@+id/ip_address"
		        android:maxLength="15"
		        android:textSize="@dimen/font_size_rec_info"
		        android:inputType= "text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:hint="@string/sett_ip_hint"
		        android:focusableInTouchMode="true"/>
		
		</LinearLayout>
		
	    <LinearLayout
	        android:id="@+id/sett_profil_dyndns"
	        android:layout_below="@id/sett_profil_ip"
	        android:orientation="horizontal"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/border_bottom">
	    
			<TextView android:id="@+id/sett_dyndns"
			    android:textSize="@dimen/font_size_rec_info"        
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:hint="@string/sett_dyn_address" />
			
			<View
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_weight="1"/>    
			 
			<EditText android:id="@+id/dyn_address"
			    android:maxLength="25"
		        android:textSize="@dimen/font_size_rec_info"
		        android:inputType= "text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:hint="@string/sett_dyndns_hint"
		        android:focusableInTouchMode="true"/>
		
		</LinearLayout>
		
	    <LinearLayout
	        android:id="@+id/sett_profil_port"
	        android:layout_below="@id/sett_profil_dyndns"
	        android:orientation="horizontal"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/border_bottom">
	    
			<TextView android:id="@+id/sett_port"
			    android:textSize="@dimen/font_size_rec_info"        
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:hint="@string/sett_port" />
			
			<View
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_weight="1"/>    
			 
			<EditText android:id="@+id/port"
			    android:maxLength="7"
		        android:textSize="@dimen/font_size_rec_info"
		        android:inputType= "text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:focusableInTouchMode="true"/>
		
		</LinearLayout>
		
	    <LinearLayout
	        android:id="@+id/sett_profil_username"
	        android:layout_below="@id/sett_profil_port"
	        android:orientation="horizontal"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/border_bottom">
	    
			<TextView android:id="@+id/sett_username"
			    android:textSize="@dimen/font_size_rec_info"        
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:hint="@string/sett_username" />
			
			<View
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_weight="1"/>    
			 
			<EditText android:id="@+id/username"
			    android:maxLength="15"
		        android:textSize="@dimen/font_size_rec_info"
		        android:inputType= "text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:focusableInTouchMode="true"/>	
		</LinearLayout>
		
	    <LinearLayout
	        android:id="@+id/sett_profil_password"
	        android:layout_below="@id/sett_profil_username"
	        android:orientation="horizontal"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/border_bottom">
	    
			<TextView android:id="@+id/sett_password"
			    android:textSize="@dimen/font_size_rec_info"        
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:hint="@string/sett_password" />
			
			<View
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_weight="1"/>    
			 
			<EditText android:id="@+id/password"
			    android:maxLength="15"
		        android:textSize="@dimen/font_size_rec_info"
		        android:inputType= "textPassword"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:hint="@string/password"
		        android:focusableInTouchMode="true"/>	
		</LinearLayout>
		
		<LinearLayout
		    android:id="@+id/sett_profil_new_profil"
	        android:layout_below="@id/sett_profil_password"
	        android:orientation="horizontal"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/border_bottom">
	    
			<TextView android:id="@+id/sett_new_profilname"
			    android:textSize="@dimen/font_size_rec_info"        
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:hint="@string/sett_new_profil" />
			
			<View
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_weight="1"/>    
			 
			<EditText android:id="@+id/new_profilname"
			    android:maxLength="15"
		        android:textSize="@dimen/font_size_rec_info"
		        android:inputType= "text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:hint="@string/sett_new_profil_hint"
		        android:focusableInTouchMode="true"/>
		
		</LinearLayout>
	</RelativeLayout>
</ScrollView>